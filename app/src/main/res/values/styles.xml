<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="mainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="topLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/topLayout</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="teamsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="teamContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/mainPadding</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="buttonParent" parent="teamsContainer">
        <item name="android:layout_margin">@dimen/mainMargin</item>
    </style>

    <style name="redButton" parent="buttonParent">
        <item name="android:background">@drawable/red_team_button</item>
    </style>

    <style name="blueButton" parent="buttonParent">
        <item name="android:background">@drawable/blue_team_button</item>
    </style>

    <style name="mainWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Start activity -->
    <style name="pokeball">
        <item name="android:layout_width">@dimen/pokeball</item>
        <item name="android:layout_height">@dimen/pokeball</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="startText" parent="mainWrapContent">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">@dimen/biggerMargin</item>
        <item name="android:textSize">@dimen/mainText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="figthButton" parent="mainWrapContent">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">@dimen/biggerMargin</item>
    </style>

    <style name="pokemonContainerImage">
        <item name="android:layout_width">@dimen/pokemonFace</item>
        <item name="android:layout_height">@dimen/pokemonFace</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/regularMargin</item>
    </style>

    <style name="pokemonContainerText" parent="mainWrapContent">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/regularMargin</item>
        <item name="android:textSize">@dimen/mainText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Battle Activity -->

    <style name="visualContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="visualRed" parent="visualContainer">
        <item name="android:background">@color/redTransparent</item>
    </style>

    <style name="visualBlue" parent="visualContainer">
        <item name="android:background">@color/blueTransparent</item>
    </style>

    <style name="pokemonInfosContainer">
        <item name="android:layout_width">@dimen/infoContainer</item>
        <item name="android:layout_height">@dimen/infContainerHeight</item>
        <item name="android:layout_margin">@dimen/biggerMargin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="pokemonNameText">
        <item name="android:layout_width">@dimen/infoContainer</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/smallerText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/mainPadding</item>
        <item name="android:background">@color/transparentWhite</item>
    </style>

    <style name="hpTextParent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="hpText" parent="hpTextParent">
        <item name="android:layout_width">@dimen/infoContainerHp</item>
        <item name="android:padding">@dimen/mainPadding</item>
        <item name="android:text">@string/hp</item>
    </style>

    <style name="hpTextValue" parent="hpTextParent">
        <item name="android:layout_width">@dimen/infoContainerValue</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/mainPadding</item>
    </style>

    <style name="attackTypeImage">
        <item name="android:layout_width">@dimen/atkTypeImgWidth</item>
        <item name="android:layout_height">@dimen/atkTypeImgHeight</item>
        <item name="android:layout_margin">@dimen/regularMargin</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="attackNameText" parent="mainWrapContent">
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/biggerMargin</item>
        <item name="android:layout_marginBottom">@dimen/biggerMargin</item>
    </style>
</resources>
